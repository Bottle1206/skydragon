.tb-loader
  position relative
  display inline-block
  vertical-align middle
  min-width 28px
  .tb-loader-blur
    -webkit-filter blur(.6px)
    filter blur(.6px)
    opacity 0.65
  &.tb-loader-small
    min-width 18px
  &.tb-loader-large
    min-width 36px
    
.tb-loader-dot
  position absolute
  left 50%
  top 50%
  span
    display inline-block
    border-radius 50%
    position absolute
    -webkit-animation dotLoad 0.91s ease infinite
    &:nth-child(1)
      left 0
      top 50%
      -webkit-animation-delay 0
    &:nth-child(2)
      -webkit-animation-delay 0.13s
    &:nth-child(3)
      left 50%
      top 0
      -webkit-animation-delay 0.26s
    &:nth-child(4)
      -webkit-animation-delay 0.39s
    &:nth-child(5)
      right 0
      top 50%
      -webkit-animation-delay 0.52s
    &:nth-child(6)
      -webkit-animation-delay 0.65s
    &:nth-child(7)
      bottom 0
      left 50%
      -webkit-animation-delay 0.78s
    &:nth-child(8)
      -webkit-animation-delay 0.91s
  &.tb-loader-dot-small
    height 18px
    width 18px
    margin-top -10px
    margin-left -9px
    span
      width 4px
      height 4px
      &:nth-child(1)
        margin-top -2px
      &:nth-child(2)
        left 2px
        top 2px
      &:nth-child(3)
        margin-left -2px
      &:nth-child(4)
        top 2px
        right 2px
      &:nth-child(5)
        margin-top -2px
      &:nth-child(6)
        right 2px
        bottom 2px
      &:nth-child(7)
        margin-left -2px
      &:nth-child(8)
        bottom 2px
        left 2px
  &.tb-loader-dot-default
    height 28px
    width 28px
    margin-top -15px
    margin-left -14px
    span
      width 6px
      height 6px
      &:nth-child(1)
        margin-top -3px
      &:nth-child(2)
        left 3px
        top 3px
      &:nth-child(3)
        margin-left -3px
      &:nth-child(4)
        top 3px
        right 3px
      &:nth-child(5)
        margin-top -3px
      &:nth-child(6)
        right 3px
        bottom 3px
      &:nth-child(7)
        margin-left -3px
      &:nth-child(8)
        bottom 3px
        left 3px
  &.tb-loader-dot-large
    height 36px
    width 36px
    margin-top -19px
    margin-left -18px
    span
      width 8px
      height 8px
      &:nth-child(1)
        margin-top -4px
      &:nth-child(2)
        left 4px
        top 4px
      &:nth-child(3)
        margin-left -4px
      &:nth-child(4)
        top 4px
        right 4px
      &:nth-child(5)
        margin-top -4px
      &:nth-child(6)
        right 4px
        bottom 4px
      &:nth-child(7)
        margin-left -4px
      &:nth-child(8)
        bottom 4px
        left 4px

.tb-loader-flower
  position absolute
  left 50%
  top 50%
  span
    display inline-block
    position absolute
    -webkit-animation flowerLoad 1.04s ease infinite
    &:nth-child(1)
      left 0
      top 50%
      -webkit-animation-delay 0.13s
    &:nth-child(2)
      transform rotate(45deg)
      -webkit-transform rotate(45deg)
      -webkit-animation-delay 0.26s
    &:nth-child(3)
      left 50%
      transform rotate(90deg)
      -webkit-transform rotate(90deg)
      -webkit-animation-delay 0.39s
    &:nth-child(4)
      transform rotate(135deg)
      -webkit-transform rotate(135deg)
      -webkit-animation-delay 0.52s
    &:nth-child(5)
      right 0
      top 50%
      transform rotate(180deg)
      -webkit-transform rotate(180deg)
      -webkit-animation-delay 0.65s
    &:nth-child(6)
      transform rotate(225deg)
      -webkit-transform rotate(225deg)
      -webkit-animation-delay 0.78s
    &:nth-child(7)
      left 50%
      transform rotate(270deg)
      -webkit-transform rotate(270deg)
      -webkit-animation-delay 0.91s
    &:nth-child(8)
      transform rotate(315deg)
      -webkit-transform rotate(315deg)
      -webkit-animation-delay 1.04s
  &.tb-loader-flower-small
    width 18px
    height 18px
    margin-top -10px
    margin-left -9px
    span
      width 6px
      height 2px
      border-radius 1px 0 0 1px
      &:nth-child(1)
        margin-top -1px
        left -1px
      &:nth-child(2)
        left 1px
        top 3px
      &:nth-child(3)
        top 1px
        margin-left -3px
      &:nth-child(4)
        top 3px
        right 1px
      &:nth-child(5)
        margin-top -1px
        right -1px
      &:nth-child(6)
        right 1px
        bottom 3px
      &:nth-child(7)
        bottom 1px
        margin-left -3px
      &:nth-child(8)
        bottom 3px
        left 1px
  &.tb-loader-flower-default
    width 24px
    height 24px
    margin-top -13px
    margin-left -12px
    span
      width 8px
      height 2px
      border-radius 1px 0 0 1px
      &:nth-child(1)
        margin-top -1px
      &:nth-child(2)
        left 2px
        top 5px
      &:nth-child(3)
        top 3px
        margin-left -4px
      &:nth-child(4)
        top 5px
        right 2px
      &:nth-child(5)
        margin-top -1px
      &:nth-child(6)
        right 2px
        bottom 5px
      &:nth-child(7)
        bottom 3px
        margin-left -4px
      &:nth-child(8)
        bottom 5px
        left 2px
  &.tb-loader-flower-large
    width 32px
    height 32px
    margin-top -17px
    margin-left -16px
    span
      width 10px
      height 4px
      border-radius 2px 0 0 2px
      &:nth-child(1)
        margin-top -2px
      &:nth-child(2)
        left 3px
        top 6px
      &:nth-child(3)
        top 3px
        margin-left -5px
      &:nth-child(4)
        top 6px
        right 3px
      &:nth-child(5)
        margin-top -2px
      &:nth-child(6)
        right 3px
        bottom 6px
      &:nth-child(7)
        bottom 3px
        margin-left -5px
      &:nth-child(8)
        bottom 6px
        left 3px
        
@-webkit-keyframes dotLoad{
  0%{
    opacity 1
    transform scale(1.1)
  }
  100%{
    opacity 0.3
    transform scale(0.2)
  }
}

@-webkit-keyframes flowerLoad{
  0%{
    opacity 1
  }
  100%{
    opacity 0.1
  }
}

body > .tb-loader-directive
  position fixed
  z-index 99999
.tb-loader-directive
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  height 100%
  width 100%
  min-width 28px
  z-index 1000
  background-color rgba(255,255,255,.7)

.tb-loader-text
  position absolute
  left 50%
  bottom -22px
  padding-left 2px
  margin-left -100px
  width 200px
  height 20px
  line-height 20px
  color #0c7cd5
  font-size 12px
  font-weight 400
  white-space nowrap
  overflow visible
  text-align center

.tb-loader-relative
  position relative !important
  
.tb-loader-hidden
  overflow hidden !important