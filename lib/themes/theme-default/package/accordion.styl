.tb-accordion-group
  .tb-accordion-item
    & > label
      display block
      padding 10px 0
      font-size 14px
      border-bottom 2px solid #f2f2f2
      cursor pointer
      transition(border 0.25s)
      &.active
        border-bottom 2px solid #2196f3
    .tb-accordion-item-content
      overflow hidden

.tb-collapse-transition
  transition(all 0.25s)