.tb-menu
  width 100%
  display none
  &.tb-menu-active
    display block
    
.tb-menu-label
  padding 14px 20px 14px 20px
  background-color #fff
  display block
  color #262626
  position relative
  transition(all 0.25s)
  font-size 14px
  word-wrap break-word
  word-break break-all
  &:hover
    background-color #f2f2f2
  &.active
    background-color #f2f2f2
  &.router-link-active
    background-color #f2f2f2
  .tb-menu-show
    position absolute
    right 10px
    top 15px
  .tb-menu-icon
    position absolute
    