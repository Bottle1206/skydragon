setToolTipBgColor(color)
  background-color color
  &.tb-tooltip-top:before, &.tb-tooltip-bottom:before, &.tb-tooltip-left:before, &.tb-tooltip-right:before
    background-color color

.tb-tooltip
  position absolute
  display block
  z-index 1070
  max-width 200px
  color #fff
  padding 5px 10px
  border-radius(4px)
  font-size 12px
  transition(all 0.25s)
  line-height 20px
  &.tb-tooltip-top:before
    content ''
    width 8px
    height 8px
    bottom -4px
    transform(rotate(45deg))
    background-color #737373
    display block
    position absolute
    left 50%
    margin-left -4px
  &.tb-tooltip-bottom:before
    content ''
    width 8px
    height 8px
    top -4px
    transform(rotate(45deg))
    display block
    position absolute
    left 50%
    margin-left -4px
  &.tb-tooltip-left:before
    content ''
    width 8px
    height 8px
    right -4px
    transform(rotate(45deg))
    display block
    position absolute
    top 50%
    margin-top -4px
  &.tb-tooltip-right:before
    content ''
    width 8px
    height 8px
    left -4px
    transform(rotate(45deg))
    display block
    position absolute
    top 50%
    margin-top -4px
  &.tb-tooltip-default
    setToolTipBgColor(#737373)
  &.tb-tooltip-success
    setToolTipBgColor(#4caf50)
  &.tb-tooltip-warning
    setToolTipBgColor(#ff9800)
  &.tb-tooltip-info
    setToolTipBgColor(#00bcd4)
  &.tb-tooltip-danger
    setToolTipBgColor(#f44336)

.te-ttshow-enter-active
  opacity 0
.te-ttshow-enter-to
  opacity 1
.te-ttshow-leave-active
  opacity 1
.te-ttshow-leave-to
  opacity 0














