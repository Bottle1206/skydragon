
.tb-switchable
  position relative
  overflow hidden
  box-sizing border-box
.tb-switchable-item
  float left 
.tb-switchable 
  .tb-switchable-list
    width 9999px
    li
      position relative
      float left
      width 100%
      height 100%
      overflow hidden
      
.tb-switchable-list, 
.tb-switchable-track 
  display block
  position relative
  top 0
  left 0
  z-index 11

.tb-switchable-nav
  position absolute
  bottom 10px
  text-align center
  width 100%
  display flex
  justify-content center
  -webkit-box-pack center
  z-index 99
  li
    float left
    width 16px
    heigh 16px
    margin 0 0 0 10px
    border-radius 2px
    background #eee
    color #333
    font 11px/16px Tahoma
    text-align center
    cursor pointer
  li.active
    background #f30
    color #fff

.tb-switchable-prev, 
.tb-switchable-next
  border none
  outline 0
  padding 0
  margin 0
  width 36px
  height 36px
  border-radius 50%
  cursor pointer
  background rgba(31,45,61,.11)
  position absolute
  top 44%
  z-index 98
  color #fff
  opacity 0

.tb-switchable-prev 
  left 16px
  
.tb-switchable-next
  right 16px
  
.tb-switchable-prev:hover, 
.tb-switchable-next:hover
  background rgba(31,45,61,.5)

.tb-switchable:hover .tb-switchable-prev, 
.tb-switchable:hover .tb-switchable-next 
  opacity 1
.tb-switchable-arrow 
  opacity 1
.tb-switchable-icon
  font-size 24px