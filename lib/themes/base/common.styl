.tb-action
  .tb-action-one
    position relative
    width 30px
    height 30px
    display inline-block
    line-height 30px
    text-align center
    color #adadad
    &:before
      content ''
      left 0
      top 0
      position absolute
      width 100%
      height 100%
      background-color rgba(0,0,0,0.1)
      z-index 0
      border-radius(50%)
      opacity(0)
      transition(all 0.25s)
      transform(scale3d(0,0,0))
    &:hover
      color #000
      &:before
        transform(scale3d(1,1,1))
        opacity(1)